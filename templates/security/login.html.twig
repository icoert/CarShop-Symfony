{% extends 'base.html.twig' %}

{% block body %}
<div class="wrapper">
    {% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h3>Bine ati venit la Car Shop!</h3>

    <form action="{{ path('login') }}" method="post">
        <div>
            <label for="username">Username:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" />
        </div>
        <div>
            <label for="password">Password:</label>
            <input type="password" id="password" name="_password" />
        </div>
        <button type="submit" class="btn btn-success w-25">Login</button>
        <br/>
        <a class="btn btn-info" href="{{ path('employee_add') }}" align="center">Creeaza cont angajat</a>
        <a class="btn btn-info" href="{{ path('customer_add') }}" align="center">Creeaza cont client</a>
    </form>
</div>
{% endblock %}
