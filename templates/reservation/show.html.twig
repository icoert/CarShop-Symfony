{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}
<div style="text-align: right; margin-bottom: 10px;">
    <a href="{{ path('reservation_index') }}" class="btn btn-info">Back</a>
    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}" class="btn btn-dark">Edit</a>
</div>
{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ reservation.startDate ? reservation.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ reservation.endDate ? reservation.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ reservation.location }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}
