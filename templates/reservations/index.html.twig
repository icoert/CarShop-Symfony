{% extends 'base.html.twig' %}

{% block title %}RentC Reservations{% endblock %}

{% block body %}
        {% if reservations %}
            <table id="reservations" class="table table-striped">
                <thead>
                <tr>
                    <th>Customer</th>
                    <th>Reservation Status</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Location</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for reservation in reservations %}
                    <tr>
                        <td>{{ reservation.customer }}</td>
                        <td>{{ reservation.reservationStatus }}</td>
                        <td>{{ reservation.startDate|date('Y-m-d') }}</td>
                        <td>{{ reservation.endDate|date('Y-m-d') }}</td>
                        <td>{{ reservation.location }}</td>
                        <td style="text-align:right; width:145px;">
                            <a href="/reservations/edit/{{ reservation.id }}" class="btn btn-info">Edit</a>
                            <a href="#" class="btn btn-danger delete-reservation" data-id="{{ reservation.id }}">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div class="jumbotron">
                <h4>No reservations to display.</h4>
                <a href="/reservations/add" class="btn btn-primary">Add a reservation</a>
            </div>
        {% endif %}
{% endblock %}