{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    <h1>Customer</h1>
    <div style="text-align: right; margin-bottom: 10px;">
        <a href="{{ path('customer_index') }}" class="btn btn-info">Back</a>
        <a href="{{ path('customer_edit', {'id': customer.id}) }}" class="btn btn-dark">Edit</a>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ customer.name }}</td>
            </tr>
            <tr>
                <th>BirthDate</th>
                <td>{{ customer.birthDate ? customer.birthDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ customer.location }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('customer/_delete_form.html.twig') }}
{% endblock %}
